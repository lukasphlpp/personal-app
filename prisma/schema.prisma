// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  employeeId      String        @unique
  email           String?       @unique
  password        String?
  firstName       String
  lastName        String
  role            Role          @default(EMPLOYEE)
  weeklyHours     Float         @default(40)
  hourlyRate      Float         @default(15)
  overtimeBalance Float         @default(0)
  vacationDays    Int           @default(30)
  vacationDaysUsed Float        @default(0)
  defaultSchedule Json?
  color           String
  startDate       DateTime      @default(now())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  timeEntries     TimeEntry[]
  
  @@map("users")
}

model TimeEntry {
  id          String        @id @default(cuid())
  userId      String
  date        DateTime
  type        EntryType
  halfDay     String?
  timeSlots   Json?
  breakMinutes Int?
  hours       Float?
  note        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("time_entries")
}

model Category {
  id          String    @id @default(cuid())
  value       String    @unique
  label       String
  color       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("categories")
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum EntryType {
  work
  vacation
  sick
  holiday
  overtime_reduction
}
